@model Games
@{
    ViewBag.Title = "Edit Game";
    Layout = "_AdminLayout";
}
<div>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="QueryName"></label>
            <div><span asp-validation-for="QueryName" class="text-danger"></span></div>
<textarea asp-for="QueryName" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Genre"></label>
            <div><span asp-validation-for="Genre" class="text-danger"></span></div>

            <select asp-for="Genre" class="form-control">
                <option value="Adventure"/>Adventure
                <option value="Others"/>Others
                <option value="Casual"/>Casual
                <option value="Racing"/>Racing
                <option value="RPG"/>RPG
                <option value="Strategy"/>Strategy
                <option value="Action"/>Action
                <option value="Indie"/>Indie
                <option value="Simulation"/>Simulation
                <option value="Sport"/>Sport
            </select>
        </div>
        <div class="form-group">
            <label asp-for="PriceFinal">Price (replace , with .)</label>
            <div><span asp-validation-for="PriceFinal" class="text-danger"></span></div>
            <input asp-for="PriceFinal" class="form-control" type="text" value="@(Model.PriceFinal)" />
        </div>
        <div class="form-group">
            <label asp-for="ReleaseDate">ReleaseDate: (original: @Model.ReleaseDate)</label>
            <div><span asp-validation-for="ReleaseDate" class="text-danger"></span></div>
            <input type="date" asp-for="ReleaseDate" value="@Model.ReleaseDate" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="RequiredAge"></label>
            <div><span asp-validation-for="RequiredAge" class="text-danger"></span></div>
            <input type="number" asp-for="RequiredAge" value="@Model.RequiredAge" class="form-control" required />
        </div>
        <div>
            Platform
            <table class="table-sm table table-striped" style="max-width:250px">
                <tr>
                    <td>
                        <div><span asp-validation-for="PlatformWindows" class="text-danger"></span></div>
                        <label asp-for="PlatformWindows"></label>
                    </td>
                    <td>
                        <input type="checkbox" asp-for="PlatformWindows" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <div><span asp-validation-for="PlatformLinux" class="text-danger"></span></div>
                        <label asp-for="PlatformLinux"></label>
                    </td>
                    <td>
                        <input type="checkbox" asp-for="PlatformLinux" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <div><span asp-validation-for="PlatformMac" class="text-danger"></span></div>
                        <label asp-for="PlatformMac"></label>
                    </td>
                    <td>
                        <input type="checkbox" asp-for="PlatformMac" />
                    </td>
                </tr>

            </table>

        </div>
        <div>
            <label asp-for="DetailedDescrip"></label>
            <div><span asp-validation-for="DetailedDescrip" class="text-danger"></span></div>
            <textarea asp-for="DetailedDescrip" class="form-control"></textarea>
        </div>

        <br />
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="List" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
