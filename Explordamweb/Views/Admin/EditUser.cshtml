@model EditAccountForm
@{
    ViewBag.Title = "Edit Users";
    Layout = "_AdminLayout";
}


<div class="bg-primary m-1 p-1"><h4>Edit User</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="EditUser" method="post">
    <div class="form-group">
        <label asp-for="Id"></label><input type="text" value="@Model.Id" class="form-control" disabled />
        <input asp-for="Id" type="hidden" value="@Model.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label><input type="text" value="@Model.UserName" class="form-control" disabled />
        <input asp-for="UserName" type="hidden" value="@Model.UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" name="email" value="@Model.Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" name="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>