<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />
    <link rel="stylesheet" asp-href-include="/css/*.css" />
    <title>GamesShop</title>
    <script asp-src-include="/js/*.js"></script>
</head>
<body style="background-image: url(https://image.ibb.co/hSyBUb/Background.jpg);
    	background-size:     cover;
    	background-repeat:   no-repeat;
    	background-position: center center;
	    height:100%;">
    <div class="navbar navbar-inverse bg-inverse" role="navigation" data-step="1" data-intro="This is the navigationbar, here you can navigate through the different pages of this website.">
        <div class="row">
            @await Component.InvokeAsync("Navbar")
            <div class="col-4 text-right">
                @await Component.InvokeAsync("CartSummary")
            </div>
        </div>
    </div>
    <div class="row m-1 p-1">
        <div class="col-3">
            @await Component.InvokeAsync("UserMenu")
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
    <div style="width:100%;
                height:80px;
                background-color:#292b2c;
                color:white;">
        <center><h5><br />Branko, Chris, Sebastiaan, Velid</h5></center>
    </div>
</body>
</html>